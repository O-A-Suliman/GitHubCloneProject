# ========== Django ==========
# الوضع: True للتطوير، False للإنتاج
DEBUG=True

# المفتاح السري للـ Django
SECRET_KEY=your-secret-key-here

# النطاقات المسموحة (مفصولة بفاصلة)
ALLOWED_HOSTS=localhost,127.0.0.1

# ========== قاعدة البيانات ==========
# محرك قاعدة البيانات: sqlite3, postgresql, mysql
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# في حالة استخدام قاعدة بيانات خارجية:
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=your_user
# DB_PASSWORD=your_password

# ========== CORS ==========
# النطاقات المسموحة للـ React
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ========== React / Frontend ==========
# رابط API (استخدمه في متغير البيئة VITE_API_URL)
VITE_API_URL=http://localhost:8000/api

# ========== JWT ==========
# مدة صلاحية التوكن (بالدقائق)
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440
